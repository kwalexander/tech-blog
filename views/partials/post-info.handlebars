<article class="post">
    <div class="title">
        <span>{{title}}</span>
    </div>
    <div class="contents">
        <p>{{contents}}</p>
    </div>
    <div class="meta">
        Author: {{user.username}} on {{format_date created_at}}
        <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
    </div>
</article>